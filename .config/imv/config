[options]
suppress_default_binds = true

[aliases]
# alias = command to run

[binds]
q = quit

# Image navigation
h = prev
l = next
<Left> = prev
<Right> = next
gg = goto 0
<Shift+G> = goto -1

# Panning
<Shift+J> = pan 0 -50
<Shift+K> = pan 0 50
<Shift+H> = pan 50 0
<Shift+L> = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1

# Other commands
x = close
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
